@model IEnumerable<Tazkarty.Models.Ticket>

@{
    ViewData["Title"] = "My Tickets";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            You have not booked any tickets yet.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Match</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Location</th>
                        <th>Price</th>
                        <th>Booking Time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model)
                    {
                        <tr>
                            <td>@ticket.Match.TeamA vs @ticket.Match.TeamB</td>
                            <td>@ticket.Match.MatchDate.ToString("yyyy-MM-dd")</td>
                            <td>@ticket.Match.MatchDate.ToString("HH:mm")</td>
                            <td>@ticket.Location</td>
                            <td>@ticket.Price.ToString("C")</td>
                            <td>@ticket.BookingTime.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
