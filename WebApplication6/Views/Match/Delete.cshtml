@model Tazkarty.Models.Match

@{
    ViewData["Title"] = "Delete Match";
}

<div class="container mt-4">
    <h2>Delete Match</h2>

    <div class="alert alert-warning">
        <strong>Warning!</strong> Are you sure you want to delete this match?
    </div>

    <form asp-action="Delete" asp-controller="Match" method="post">
        <input type="hidden" asp-for="MatchId" />
        <div class="form-group">
            <label>Team A:</label>
            <p>@Model.TeamA</p>
        </div>
        <div class="form-group">
            <label>Team B:</label>
            <p>@Model.TeamB</p>
        </div>
        <div class="form-group">
            <label>Match Date & Time:</label>
            <p>@Model.MatchDate.ToString("yyyy-MM-dd HH:mm")</p>
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
